	</cCondition>
	
	<cCondition name="TRUE_MADNESS" desc="発狂している！！！" pri="73">
		<effect ect="CONTINUE" time="INFINITY" ett="CONFU" p="1"/>
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="POW" value="-0.50" p="0.75" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SAN" value="-0.50" p="0.75" />
	</cCondition>
	
	<cCondition name="ROT" desc="腐敗している" pri="80">
		<effect ect="CONTINUE" time="15/50" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="STR" value="-0.05" p="0.75" />
