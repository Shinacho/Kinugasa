<KinugasaBattleConfig>

	<!-- 状態異常のマスタ定、魔法、スキル、装備による効果も同じストレージに追加することができる	-->
	<cCondition name="NOMAL" desc="健康だ" pri="0">
		<effect ect="NONE" />
	</cCondition>

	<cCondition name="REGENE" desc="徐々に回復している" pri="2" >
		<effect ect="CONTINUE" time="5/15" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="HP"  value="+0.1" p="1" />
	</cCondition>
	
	<cCondition name="MOIST" desc="濡れている" pri="5" >
		<effect ect="ONECE" time="1" ett="ATTRIBUTE_IN" est="ADD_VALUE" tgt="FLAME" value="-0.5" p="1" />
		<effect ect="ONECE" time="1" ett="ATTRIBUTE_IN" est="ADD_VALUE" tgt="THNDER" value="+0.5" p="1" />
	</cCondition>
	
	<cCondition name="OIL" desc="油を被った" pri="5">
		<effect ect="ONECE" time="1" ett="ATTRIBUTE_IN" est="ADD_VALUE" tgt="FLAME" value="+0.5" p="1" />
		<effect ect="ONECE" time="1" ett="ATTRIBUTE_IN" est="ADD_VALUE" tgt="IMPACT" value="-0.25" p="1" />
		<effect ect="ONECE" time="1" ett="ATTRIBUTE_IN" est="ADD_VALUE" tgt="C_FLAME" value="+0.5" p="1" />
	</cCondition>
	
	<cCondition name="POISON" desc="毒を受けている" pri="10">
		<effect ect="CONTINUE" time="50/75" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="HP"  value="-0.05"  p="1" />
		<effect ect="ONECE"    time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="CON" value="-0.5" p="1" />
	</cCondition>
	
	<cCondition name="FLAME" desc="炎上している" pri="20">
		<effect ect="CONTINUE" time="50/75" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="HP"  value="-0.1" p="1" />
		<effect ect="CONTINUE" time="50/75" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="CON" value="-0.1" p="1" />
		<effect ect="CONTINUE" time="50/75" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SAN" value="-0.025" p="1" />
		<effect ect="CONTINUE" time="50/75" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="POW" value="-0.025" p="1" />
		<effect ect="CONTINUE" time="50/75" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="ATK" value="-0.1" p="1" />
		<effect ect="CONTINUE" time="50/75" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="DEF" value="-0.1" p="1" />
		<effect ect="CONTINUE" time="50/75" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="AVO" value="-0.1" p="1" />
	</cCondition>

	<cCondition name="FROZEN" desc="凍結している" pri="20">
		<effect ect="CONTINUE" time="25/50" ett="STOP"                                                   p="0.75" />
		<effect ect="ONECE"    time="1"	    ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SPD" value="-0.5" p="0.75" />
		<effect ect="ONECE"    time="1"	    ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="AVO" value="-0.5" p="0.75" />
	</cCondition>
	
	<cCondition name="TREE" desc="木化している" pri="20">
		<effect ect="CONTINUE" time="25/50" ett="STOP"                                                    p="0.99" />
		<effect ect="CONTINUE" time="25/50" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SAN" value="-0.05" p="1" />
		<effect ect="ONECE"    time="1"	    ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SPD" value="-0.75" p="0.8" />
		<effect ect="ONECE"    time="1"	    ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="AVO" value="-0.75" p="0.8" />
		<effect ect="ONECE"    time="1"	    ett="ATTRIBUTE_IN" est="ADD_PERCENT_OF_MAX" tgt="FLAME" value="-0.75" p="1" />
		<effect ect="ONECE"    time="1"	    ett="ATTRIBUTE_IN" est="ADD_PERCENT_OF_MAX" tgt="C_FLAME" value="-0.75" p="1" />
	</cCondition>
	
	<cCondition name="BLIND" desc="目が見えない" pri="30">
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="DEX" value="-0.75" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SPD" value="-0.75" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="AVO" value="-0.75" p="1" />
	</cCondition>

