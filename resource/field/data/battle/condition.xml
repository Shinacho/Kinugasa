		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="DEX" value="-0.75" p="0.5" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SPD" value="-0.75" p="0.5" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="AVO" value="-0.75" p="0.5" />
	</cCondition>
	
	<cCondition name="CONFUSION" desc="混乱している" pri="71">
		<effect ect="CONTINUE" time="5/25" ett="CONFU" p="1"/>
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="POW" value="-0.25" p="0.5" />
	</cCondition>
	
	<cCondition name="MADNESS" desc="狂乱している" pri="72">
		<effect ect="CONTINUE" time="5/25" ett="CONFU" p="1"/>
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="POW" value="-0.25" p="0.5" />
